{
    "schemaVersion": 1,
    "id": "ali",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "issues": "https://github.com/yanny7/advancedlootinfo/issues",
        "sources": "https://github.com/yanny7/advancedlootinfo"
    },
    "license": "${license}",
    "icon": "logo.png",
    "environment": "*",
    "accessWidener": "ali.accesswidener",
    "entrypoints": {
        "main": [
            "com.yanny.ali.CommonAliMod"
        ],
        "client": [
            "com.yanny.ali.ClientAliMod"
        ],
        "fabric-datagen": [
            "com.yanny.ali.datagen.DataGeneration"
        ],
        "ali": [
            "com.yanny.ali.plugin.Plugin",
            "com.yanny.ali.plugin.lootjs.LootJsPlugin"
        ],
        "emi": [
            "com.yanny.ali.compatibility.EmiCompatibility"
        ],
        "jei_mod_plugin": [
            "com.yanny.ali.compatibility.JeiCompatibility"
        ],
        "rei_client": [
            "com.yanny.ali.compatibility.ReiCompatibility"
        ]
    },
    "mixins": [
        "ali.mixins.json",
        "ali.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": "*",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=${java_version}"
    },
    "suggests": {
        "emi": "${emi_version_range_fabric}",
        "jei": "${jei_version_range_fabric}",
        "rei": "${rei_version_range_fabric}",
        "lootjs": "*"
    }
}
  